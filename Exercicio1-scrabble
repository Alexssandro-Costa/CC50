#include <cs50.h>
#include <ctype.h>
#include <stdio.h>
#include <string.h>

int POINTS[] = {1, 3, 3, 2, 1, 4, 2, 4, 1, 8, 5, 1, 3, 1, 1, 3, 10, 1, 1, 1, 1, 4, 4, 8, 4, 10};

int compute_score(string word);

int main(void)
{
    // Solicitar ao usuÃ¡rio duas palavras
    string word1 = get_string("Player 1: ");
    string word2 = get_string("Player 2: ");

    // Calcular os pontos de cada palavra
    int score_player1 = compute_score(word1);
    int score_player2 = compute_score(word2);

    // Imprimir o vencedor
    if (score_player1 > score_player2)
    {
        printf("Player 1 Wins !\n");
    }
    else if (score_player2 > score_player1)
    {
        printf("Player 2 Wins !\n");
    }
    else
    {
        printf("Tie !\n");
    }
}

int compute_score(string word)
{
    // Computa e devolve os pontos de cada palavra
    int sum = 0;
    
    for (int i = 0, n = strlen(word); i < n; i++)
    {
        word[i] = toupper(word[i]);
        if (word[i] >= 'A' && word[i] <= 'Z')
        {
            int aux = word[i] - 'A';
            sum = sum + POINTS[aux];
        }
    }
    return sum;
}
